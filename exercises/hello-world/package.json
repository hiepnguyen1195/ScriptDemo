{
  "name": "ExamTest",
  "version": "1.0.0",
  "description": "Hello World!",
  "main": "hello-world.ts",
  "types": "./hello-world.test.ts",
  "license": "MIT",
  "author": "hiepnn",
  "devDependencies": {
    "@types/jest": "^18.1.1",
    "@types/node": "^8.9.4",
    "jest-cli": "^22.1.1",
    "ts-jest": "^19.0.14",
    "typescript": "^2.6.2"
  },
  "scripts": {
    "test": "tsc --noEmit -p . && jest --no-cache",
    "lint": "tslint -c tslint.json 'src/**/*.{ts,tsx}'"
  },
  "jest": {
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      ".*": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    }
  }
}
